@model Tactsoft.Core.Entities.Benefit

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="content-wrapper">
    <div class="content-header">
        <div class="container-fluid">

            <div class="row mb-2">


                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Dashboard">Dashboard</a></li>
                        <li class="breadcrumb-item active">@ViewData["Title"]</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <section class="content">
        <div class="container-fluid d-flex justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Add New @ViewData["Title"]</h3>
                    </div>
                    <form asp-action="Create">
                        <div class="card-body">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="BenefitName" class="control-label"></label>
                                <input asp-for="BenefitName" class="form-control" />
                                <span asp-validation-for="BenefitName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="card-body">
                            <div class="row mb-2">
                                <div class="form-group">
                                    <label asp-for="JobPost" class="col-md-4 col-form-label"></label>

                                    <select asp-for="JobPostId" class="form-control" asp-items="ViewBag.JobPostId">
                                        <option value="">Select JobPost</option>
                                    </select>
                                    <span asp-validation-for="JobPostId" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <label asp-for="OtherBenefitType" class="col-md-4 col-form-label"></label>

                                    <select asp-for="OtherBenefitTypeId" class="form-control" asp-items="ViewBag.OtherBenefitTypeId">
                                        <option value="">Select OtherBenefitType</option>
                                    </select>
                                    <span asp-validation-for="OtherBenefitTypeId" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer">
                            <div style="text-align:end">
                                <a class="btn btn-outline-danger btn-sm" asp-action="Index">
                                    <i class="far fa-window-close"></i> Cancel
                                </a>
                                <button type="submit" value="Create" class="btn btn-outline-primary btn-sm">
                                    <i class="far fa-save"></i> Save
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </section>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
